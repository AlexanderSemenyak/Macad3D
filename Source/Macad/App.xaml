<Application x:Class="Macad.Window.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Macad.Presentation;Component/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Macad.Resources;Component/Icon.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Macad.Resources;Component/TypeIcon.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <JumpList.JumpList>
        <JumpList ShowRecentCategory="True"
                  ShowFrequentCategory="False">
        </JumpList>
    </JumpList.JumpList>
</Application>
